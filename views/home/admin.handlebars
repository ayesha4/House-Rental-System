<div>
     
     {{#if error}}
     <br>
  <div class="fail">     
    <strong>{{error}} </strong>  
  </div>
  <br>
{{/if}}
{{#if success}}
  <div class="success">
    <strong>{{success}} </strong>  
  </div>
{{/if}}
<div class="container jumbotron jumbotron mx-auto mt-5  " style="width: 800px;">
  <div class="row ">
    <div class="col ">
  
 <form action="/admin" method="post" class="form">
       <img src="" class="logimg" alt="">
        <div class="form-group mb-4">
           <label class="formlabel"><b>E-mail</b></label> 
        <input name="email" value="{{email}}" type="email"  placeholder="Enter email here">
        
        </div>
        <div class="form-group mt-2 mb-4">
           <label class="formlabel"><b>Password</b></label> 
        <input name="password" value="{{password}}" type="password"  placeholder="*********">
       
        </div>
         <div class="form-group">
        <button type="submit" class="button-40">Login</button>
 </div>
    </form>
    
</div>
</div> 
   </div>
 </div>